sort = no
corner_radius = 0

# Progress bar
progress_bar_frame_width = 0
progress_bar_corner_radius = 3

# Colors
foreground = "#bc9f67"
frame_color = "#f2f2f2"
highlight = "#455563, #9f908d"

# Text
font = Inconsolata 10
markup = full
format = "<small>%a</small>\n<b>%s</b>\n%b"
alignment = left
vertical_alignment = center
show_age_threshold = -1
hide_duplicate_count = false

# Icon
icon_position = left
min_icon_size = 50
max_icon_size = 75
icon_path = /usr/share/icons/breeze/status/64:/usr/share/icons/breeze/status/symbolic
icon_corner_radius = 0

# Misc/Advanced
dmenu = rofi -show drun -p 'open with'

# Mouse
mouse_left_click = do_action, close_current
mouse_middle_click = close_current
mouse_right_click = close_all

[urgency_low]
background = "#455563d0"
